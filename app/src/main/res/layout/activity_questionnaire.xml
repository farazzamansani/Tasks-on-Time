            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 17.When you have several things to do, do you think it is best to do a little bit of work on each one?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq17"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 18.Do you regularly review your class notes, even when a test is not imminent?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq18"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <Button
            android:background="@android:drawable/btn_default"
            android:id="@+id/submit"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Calculate my Score!" />

    </LinearLayout>
</ScrollView>
