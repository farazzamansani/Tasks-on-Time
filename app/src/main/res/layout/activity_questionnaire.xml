<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="au.edu.utas.tasksontime.questionnaire">

    <LinearLayout
        android:fadeScrollbars="false"
        android:id="@+id/questRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 1. Do you make a list of the things you have to do each day?"
            />
        <Spinner
            android:id="@+id/spinnerq1"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 2. Do you plan your day before you start it?"
            />
        <Spinner

            android:id="@+id/spinnerq2"
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 3. Do you make a schedule of the activities you have to do on work days?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq3"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 4. Do you write a set of goals for yourself for each day?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq4"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 5. Do you spend time each day planning?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq5"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 6. Do you have a clear idea of what you want to accomplish during the next week?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq6"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 7. Do you set and honor priorities?"
            />
