            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq7"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 8. Do you often find yourself doing things which interfere with your schoolwork simply because you hate to say No to people? "
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq8"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 9. Do you feel you are in charge of your own time, by and large?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq9"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 10. On an average class day do you spend more time with personal grooming than doing schoolwork?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq10"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
///////////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 11. Do you believe that there is room for improvement in the way you manage your time? "
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq11"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
