            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq12"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 13. Do you continue unprofitable routines or activities?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq13"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 14.Do you usually keep your desk clear of everything other than what you are currently working on?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq14"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 15.Do you have a set of goals for the entire quarter?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq15"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/quiz_array"
            />
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        ////////////////////////////////////////
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Question 16.The night before a major assignment is due, are you usually still working on it?"
            />
        <Spinner
            android:padding="10dp"
            android:layout_marginTop="-16.1dp"
            android:id="@+id/spinnerq16"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
